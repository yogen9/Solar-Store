          <% } %>      
        </ul>
      </div>
    </nav>
    </div>

  <% include login%>
  <% include signup%>

  <div class="container">
       <% if(error.lenght > 0){ %> 
        <div class="alert alert-success" role="alert"> <%= error %> </div>  
