<!-- this is model for login -->
<div class="modal fade" id="login" role="dialog">
  <div class="modal-dialog">
    
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 style="text-align:center" class="modal-title"><b>Login</b></h4>
      </div>
      <div class="modal-body ">
        <div class="form-group">

          <form class="form-inline" action="/login" method="POST">
            <div class="form-group">
              <input class="form-control" type="email" name="username"  placeholder="Enter your User Name" autofocus required>
            </div>
            <div class="form-group">
              <input class="form-control" type="password" name="password" placeholder=" Enter Password" required>
            </div>
            <div class="form-group">
              <input class="form-control btn btn-success" type="submit" name="submit" value="submit">
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>