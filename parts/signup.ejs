<!-- this is model for login -->
<div class="modal fade" id="signup" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"> Sign Up </h4>
      </div>
      <div class="modal-body ">
        <div class="form-group">

          <form class="form-inline" action="/" method="POST">
            <div class="form-group">
              <input class="form-control" type="email" name="username" value="" placeholder="Enter User Name" autofocus>
            </div>
            <div class="form-group">
              <input class="form-control" type="password" name="password" value="" placeholder=" Enter Password">
            </div>
            <div class="form-group">
              <input class="form-control btn btn-default" type="submit" name="submit" value="submit">
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>